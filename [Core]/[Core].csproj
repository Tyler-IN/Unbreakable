<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../NuGetPackage.Common.props" />

  <PropertyGroup>
    <UnbreakablePolicyReportTaskAssemblyPath>$(MSBuildProjectDirectory)/../Build.PolicyReport/bin/$(Configuration)/Unbreakable.Build.PolicyReport.dll</UnbreakablePolicyReportTaskAssemblyPath>
    <UnbreakablePolicyReportEnabled Condition="Exists('$(UnbreakablePolicyReportTaskAssemblyPath)')">true</UnbreakablePolicyReportEnabled>
  </PropertyGroup>
  <Import Project="../Build.PolicyReport/Unbreakable.Build.PolicyReport.targets" />

  <PropertyGroup>
    <TargetFramework>net46</TargetFramework>
    <AssemblyName>Unbreakable</AssemblyName>
    <RootNamespace>Unbreakable</RootNamespace>
    <VersionPrefix>0.3.0-unproven</VersionPrefix>
    <Description>.NET sandboxing framework: rewrites other assemblies to ensure they can't bring down the hosting process.</Description>
    <PackageTags>sandboxing Unbreakable</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Internal\SafeDefaultApiPolicy.PolicyReport.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Argument" Version="1.0.3" />
    <PackageReference Include="JetBrains.Annotations" Version="10.4.0" />
    <PackageReference Include="Mono.Cecil" Version="0.9.6.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Runtime\Runtime.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Internal\SafeDefaultApiPolicy.cs">
      <UnbreakablePolicyTypeName>Unbreakable.Internal.SafeDefaultApiPolicy</UnbreakablePolicyTypeName>
      <UnbreakablePolicyMethodName>Create</UnbreakablePolicyMethodName>
    </Compile>
  </ItemGroup>

</Project>